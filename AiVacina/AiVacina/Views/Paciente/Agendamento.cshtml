@model AiVacina.Models.AgendamentoVacina

@{
    ViewBag.Title = "Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agendamento de Vacinas</h2>

<div class="container">
    <div>
        <p class="danger"id="error"></p>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div id="listaVacinas">

            </div>
            <div class="container-fluid" id="listaPostos" style="height:330px;overflow:auto;">
            </div>
        </div>
        <div class="col-md-6">
            <div id="datepicker"></div>
            <label for="sel1">Horário:</label>
            <select class="form-control" id="horarioVacina">
                <option selected="selected">
                    Escolha um horário
                </option>
                <option>8:00</option>
                <option>8:30</option>
                <option>09:00</option>
                <option>09:30</option>
                <option>10:00</option>
                <option>10:30</option>
                <option>11:00</option>
                <option>12:30</option>
                <option>13:00</option>
                <option>13:30</option>
                <option>14:00</option>
                <option>14:30</option>
                <option>15:00</option>
                <option>15:30</option>
            </select>
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm("Agendamento", "Paciente", FormMethod.Post))
        {
            <input type="hidden" id="dataDia" />
            @Html.HiddenFor(model => model.idPosto, new { @id= "Posto_idEstabelecimento" })
            @Html.HiddenFor(model => model.idVacina)
            @Html.HiddenFor(model => model.dataAgendamento)
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Agendar" id="agendar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>

</div>
@section scripts {

    @Scripts.Render("~/bundles/adicionapostos");
    @Scripts.Render("~/bundles/listavacinas");
    @Scripts.Render("~/bundles/pacienteagendamento");
}