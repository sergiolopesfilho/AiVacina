@model AiVacina.Models.VacinaAplicada

@{
    ViewBag.Title = "Cadastrar Vacina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastre Vacinas ja tomadas.</h2>
@Html.Partial("_PacienteLayout")
<br />
<div class="row">
    <p class="danger" id="error">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </p>
</div>
<div class="row">
    <div class="col-md-3">
        <div id="listaVacinas">
            @Html.Action("GetVacinas", "Paciente")
        </div>
        <div class="">
            <strong>Posto: </strong>
            <input type="text" id="nomePosto" class = "form-control" />
        </div>
    </div>
    <div class="col-md-4">
        <div id="datepicker"></div>
    </div>
</div>
<br />
<div class="row">
    @using (Html.BeginForm("CadastrarVacina", "Paciente", FormMethod.Post))
    {

            @Html.HiddenFor(model => model.posto)
            @Html.HiddenFor(model => model.dataVacinação)
            @Html.HiddenFor(model => model.vacina)
            @Html.HiddenFor(model => model.idCarteira)
            @Html.HiddenFor(model => model.idVacinaAplicada)
            @Html.HiddenFor(model => model.dataReforco)
     
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="salvar" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    }
</div>


@section scripts {

    @Scripts.Render("~/bundles/pacientecadastrarvacina");
}

