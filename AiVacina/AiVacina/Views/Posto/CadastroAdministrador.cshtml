@model AiVacina.Models.Posto

@{
    ViewBag.Title = "CadastroAdministrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastre um Administrador</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10" id="listaPostos">
            </div>
            @Html.HiddenFor(model => model.idEstabelecimento, new { @id= "Posto_idEstabelecimento" });
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admPosto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.admPosto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.admPosto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cpfAdmPosto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cpfAdmPosto, new { htmlAttributes = new { @class = "form-control cpf-mask" } })
                @Html.ValidationMessageFor(model => model.cpfAdmPosto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section scripts {

    @Scripts.Render("~/bundles/adicionapostos");
}