<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AiVacina</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Home", "Index", "Home",null, new { @class = "navbar-brand" })

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Contato <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Quem Somos</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Posto", "Index", "Posto",null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        @{
            var session = Session["Nome"];
            if (session == null)
            {
            <div>
                @Html.ActionLink("Cadastre-se", "Cadastro", "Home", new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Entrar", "Entrar", "Home", new { @class = "btn btn-outline-secondary" })
            </div>
            }
            else
            {
                @Html.ActionLink("Sair", "", "Home", new { @class = "btn btn-outline-secondary" })
            }

        }
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AiVacina</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/inputmask")
    @RenderSection("scripts", required: false)
</body>
</html>