@model IEnumerable<AiVacina.Models.Posto>

@{
    if (Model != null && Model.Count() > 0)
    {
        <select class="form-control margin-bottom-20px" id="selectPosto">
            <option selected="selected">
                Escolha um posto
            </option>
            @foreach (var item in Model)
            {
                <option value="@Html.DisplayFor(modelItem => item.cnpj)">
                   @Html.DisplayFor(modelItem => item.nomeEstabelecimento)
                </option>
            }
        </select>
    }
    else
    {
        <h5>Ainda não existem postos cadastrados..</h5>
    }
}

