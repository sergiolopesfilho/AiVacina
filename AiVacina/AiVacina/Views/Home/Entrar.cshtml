@model AiVacina.Models.PacienteLogin

@{
    ViewBag.Title = "Entrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Entrar</h2>

<div class="container">
@using (Html.BeginForm("Entrar", "Home", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row form-inline">
        <div class="form-group">
            @Html.LabelFor(model => model.numCartaoCidadao, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.numCartaoCidadao, new { htmlAttributes = new { @class = "form-control input-lg cartao-cidadao" } })
                @Html.ValidationMessageFor(model => model.numCartaoCidadao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senha, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @*<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>*@
                @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control input-lg" } })
                @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
</div>